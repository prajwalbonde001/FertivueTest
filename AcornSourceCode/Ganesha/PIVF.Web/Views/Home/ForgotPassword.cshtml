@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<section ng-controller="loginController" ng-init="cleanURL()">
    <form class="form-login" role="form">
        <h2 class="form-login-heading">Request New Password</h2>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" data-ng-model="userName" required autofocus>
        </div>
        <div style="margin-top:20px" class="form-group">
            <button class="btn btn-lg btn-info btn-block" type="submit" ng-click="fprequest()">Submit</button>
        </div>        
        <div data-ng-hide="message == ''" data-ng-class="(savedSuccessfully) ? 'alert alert-success' : 'alert alert-danger'">
            {{message}}
        </div>
    </form>
</section>