@{
    Layout = null;
}
<div ng-controller="ConvertToDonorCtrl" ng-init="PageSetup()">
    <div class="row">
        <!-- <section class="col-lg-12"><h5 class="subTitle">Grid Title</h5></section> -->
        <div class="col-md-offset-4 col-md-4 col-lg-offset-4 col-lg-4 m-t-10 m-b-10">
            <div class="input-group form-group">
                <input type="text" class="form-control" ng-keypress="($event.which === 13)?NormalSearch(PatientListDetails.NameCodeMRNo):0" ng-model="PatientListDetails.NameCodeMRNo" placeholder="Search">
                <span class="input-group-addon glyphicon glyphicon-search btn" ng-click="NormalSearch(PatientListDetails.NameCodeMRNo)" type="button"></span>
            </div>
        </div>
    </div>
    <div class="form_Content" style="min-height:370px">
        <div class="row">
            <div class="col-md-12 col-lg-12 m-t-20">
                <div class="table-responsive" style="max-height:450px; min-height:450px;">
                    <table id="" class="table table-striped table-hover" style="min-width:1500px;">
                        <thead>
                            <tr>
                                <th>MRN.</th>
                                <th>Patient Name</th>
                                <th>Convert To Donor</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="Item in PatientDetails">
                                <td>{{Item.MRNO}}</td>
                                <td>{{Item.PatientName}}</td>
                                <td>
                                    <button type="button" ng-click="convertToDonar(Item)" value="">Mark as Donor</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12 ">
            <uib-pagination total-items="TotalItems" ng-model="CurrentPage" ng-change="PageChange()" max-size="maxSize" class="pagination-sm" boundary-links="true"
                            num-pages="numPages" items-per-page="7" first-text="First"
                            previous-text="Previous" next-text="Next"
                            last-text="Last"></uib-pagination>
        </div>
    </div>
</div>
