                @*<div class="table-responsive fixed_header" id="tableToExport">
                  <table class="table table-hover table-striped custom-table-container">*@
                 <div class="custom-table-container" id="tableToExport">
                    <table id="data-table" class="table table-hover table-striped  unique-table-class">
                        <thead>
                            <tr>                     
                                <th>@PIVF.LanguageResource.Resources.lblMRNO .</th>
                                <th>@PIVF.LanguageResource.Resources.lblPatientName</th>
                                <th>@PIVF.LanguageResource.Resources.lblvAGE</th>
                                <th>@PIVF.LanguageResource.Resources.lblGender</th>
                                <th>@PIVF.LanguageResource.Resources.lblPartnerName</th>
                                @*<th>Cycle code</th>*@
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="Item in PatientList">
                                <td>{{Item.MRNo  && Item.MRNo != 0 ? Item.MRNo : '-' }}</td>
                                <td>{{Item.PatientName  && Item.PatientName != 0 ? Item.PatientName : '-' }}</td>
                                <td>{{ Item.Age && Item.Age != 0 ? Item.Age : '-' }}</td>
                                <td>{{ Item.Gender && Item.Gender != 0 ? Item.Gender : '-' }}</td>
                                <td>{{ Item.PartnerName && Item.PartnerName != 0 ? Item.PartnerName : '-' }}</td>
                                @* <td>{{ Item.ContactNo1 && Item.ContactNo1 != 0 ? Item.ContactNo1 : '-' }}</td>*@
