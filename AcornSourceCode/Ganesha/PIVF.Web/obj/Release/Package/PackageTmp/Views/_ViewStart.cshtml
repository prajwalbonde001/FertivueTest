@{
    //Layout = "~/Views/Shared/_Layout.cshtml";

    string CurrentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]).ToString();
    string layout = "";
    switch (CurrentName)
    {
        case "Authentication":
            layout = "~/Views/Shared/_LoginLayout.cshtml";
            break;
        case "ReportView":
            layout = null; ;
            break;
        default:
            layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
    Layout = layout;
}